@model BooksMVC.Models.Books.BookEdit

<form method="post" asp-controller="Books" asp-action="Update">
    <input asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NumberOfPages"></label>
        <input asp-for="NumberOfPages" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PublicationDate"></label>
        <input asp-for="PublicationDate" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <input type="submit" value="Add Book" class="btn-success" />
</form>
@section Scripts{
    @*<partial name="_ValidationScriptsPartial" />*@
    @await Html.PartialAsync("_ValidationScriptsPartial")
}